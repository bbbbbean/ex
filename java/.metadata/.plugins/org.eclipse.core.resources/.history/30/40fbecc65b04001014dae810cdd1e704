package Ch24;

import java.io.DataInputStream;

public class ClientRecvThread implements Runnable{

	// 수신 : input
	DataInputStream din;
	
	ClientRecvThread(DataInputStream din){
		this.din = din;
	}
	
	@Override
	public void run() {
		while(true) {
			String recv;
			
			// client > server 수신
			recv = din.readUTF();
			if(recv.equals("q")) break;
			System.out.println("[Server] : "+recv);
		}
		
	}

}
