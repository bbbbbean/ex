package Ch04;

import java.util.Scanner;

public class C04Scanner {
	public static void main(String[] args) {
		// 이름을 입력하세요? 홍길동
		// 홍길동 님의 나이를 입력하세요? 35
		// 홍길동 님의 주소를 입력하세요? 대구광역시 달서구 000
		// 홍길동 님의 나이는 35세 주소는 대구광역시 ~~ 입니다
		
		Scanner sc = new Scanner(System.in);
		System.out.println("이름을 입력하세요?");
		String name = sc.next();
		System.out.println("홍길동 님의 나이를 입력하세요?");
		int age = sc.nextInt();
		System.out.println("홍길동 님의 주소를 입력하세요?");
		sc.nextLine();
		String add = sc.nextLine();
		System.out.printf("%s 님의 나이는 %d세 주소는 %s 입니다.",name, age, add);
		
		
		
		// Scanner를 이용해서 이름, 주미번호 앞 6자리 , 전화번호를 키보드에서
		// 입력받고 출력하는 코드를 작성해보세요

		String userName = sc.next();
		int id = sc.nextInt();
		String phone = sc.next();

		System.out.printf("%s %s %s\n",userName,id,phone);

//		[예시]
//		----------------------------
//		[필수 정보 입력]
//		1. 이름 : ______________ENTER
//		2. 주민번호 6자리 : ______________ENTER
//		3. 전화번호 : ____________ENTER
//
//		[입력한 내용]
//		이름 : 홍길동
//		주민번호 : 123456
//		PH : 010-222-3333
//		----------------------------
	}
}
