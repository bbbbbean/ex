package Ch05;

import java.util.Scanner;

import Ch01.C01SystemOut;

public class C02Ex {

	public static void main(String[] args) {
		
		// 1.문제(삼항연산자)
		// 키보드로 국어/영어/수학 점수를 입력받아 각각의부분점수가 40점이상이고
		// 총점수 평균이 70점이상이면 '합격'
		// 미만이면 '불합격'을 출력합니다
		
		Scanner sc = new Scanner(System.in);
		// 점수 입력 받기
		System.out.println("국어 점수를 입력하세요 : ");
		int kor = sc.nextInt();
		System.out.println("영어 점수를 입력하세요 : ");
		int eng = sc.nextInt();
		System.out.println("수학 점수를 입력하세요 : ");
		int math = sc.nextInt();
		
		// 총 점수 평균 구하기
		int sum = kor+eng+math;
		int aver = sum/3;
		
		// 출력
		String grade = (aver>=70)?"합격":"불합격";
		System.out.printf("평균이 %d점입니다. %s입니다.\n",aver,grade);
		
		// 2.미니문제(%연산자)
		// 키보드로 부터 정수값 2 를 입력받아
		// 두수의 합이 짝수이면 "짝수입니다"
		// 홀수이면 "홀수입니다" 를 출력하세요~
		
		
		// 3.문제
		// 국어 / 영어 / 수학 점수를 입력받아서
		// 국어 점수가 40점이상
		// 영어 점수가 40점이상
		// 수학 점수가 40점이상이면서 전체평균이 60점이상이면 합격을 출력
		// 아니면 불합격을 출력하세요
		// 삼항연산자와 논리연산자를 이용합니다.

	}

}
    