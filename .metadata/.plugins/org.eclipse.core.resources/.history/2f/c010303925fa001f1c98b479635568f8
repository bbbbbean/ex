package Ch10;

import java.util.Scanner;

// 5개의 정수값을 입력 받아 int형 배열에 저장하고
// 최대값, 최소값, 전체합을 출력합니다.

// 5명 학생의 국영수 점수를 입력 받아 2차원 배열에 저장
// 각 학생의 국영수 점수의 합/평균을 구하고
// 각 과목당 합/평균을 구해보세요

public class C06Ex {
	public static void main(String[] args) {
		
		// 점수, 정수 입력받기
		Scanner sc = new Scanner(System.in);
		int [][] test=new int[5][3];
		System.out.println("5명 학생의 국영수 점수를 입력하세요");
		for(int i=0;i<5;i++) {
			for(int j=0;j<3;j++) {
				test[i][j]=sc.nextInt();
			}
		}
		
		// 각 학생의 국영수 점수의 합 == 열의 합 == [1][i]
//		for(int i=0;i<test[i].length;i++) {
//			int sum=0;
//			for(int j=0;j<test.length;j++) {
//				sum+=test[j][i];
//			}
//			System.out.println(i+"합"+sum);
//		}
		// 학생당 국영수 평균 1번 학생, 2번 학생 [1][i]
		for(int i=0;i<test[i].length;i++) {
			int sum=0;
			sum+=[1][i];

			System.out.println(i+"번 학생의 국영수 점수 합은"+sum+"평균은"+sum/3);
		}
		
		
		// 과목당 합 평균
		int kor_sum=0;
		for(int i=0;i<test.length;i++) {
			kor_sum+=test[i][0];
		}
		int eng_sum=0;
		for(int i=0;i<test.length;i++) {
			eng_sum+=test[i][1];
		}
		int math_sum=0;
		for(int i=0;i<test.length;i++) {
			math_sum+=test[i][2];
		}
		System.out.printf("국어 점수의 합은 %d점, 평균은 %d점입니다.\n",kor_sum,kor_sum/5);
		System.out.printf("영어 점수의 합은 %d점, 평균은 %d점입니다.\n",eng_sum,eng_sum/5);
		System.out.printf("수학 점수의 합은 %d점, 평균은 %d점입니다.\n",math_sum,math_sum/5);
		
		
		
		
	}
}
