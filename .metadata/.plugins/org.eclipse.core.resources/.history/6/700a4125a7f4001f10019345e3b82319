		// 정수 한개 값을 입력 받아 3의 배수이면 해당 수를 출력하세요
		// 3의 배수이면서 5의 배수라면 출력 -
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("정수를 입력하세요 : ");
		int num = sc.nextInt();
		
		if(num%3 == 0 && num%5 == 0) {
			System.out.println(num+"은/는 3과 5의 배수입니다.");
		}else if(num%3 == 0){
			System.out.println(num+"은/는 3의 배수입니다.");
		}else {
			System.out.println("-");
		}
		
		sc.close();
		
		
		
		
		
	}
