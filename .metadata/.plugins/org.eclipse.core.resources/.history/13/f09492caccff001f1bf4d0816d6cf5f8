package Ch19;

import java.io.FileReader;
import java.io.Reader;

public class C03FileCopyMain {
	
	private static String fileDir = "C:\\IOTEST\\";
	public static void main(String[] args) {	// args[0] 원본 파일 / args[1] 대상 파일
		for(String arg:args) {
			System.out.println(arg);
		}
		
		Reader fin = new FileReader(FileDir + args[0]);	// 원본파일
		Writer fout = new FileWriter(FileDir + args[1]);	// 원본파일
		
	}
}
