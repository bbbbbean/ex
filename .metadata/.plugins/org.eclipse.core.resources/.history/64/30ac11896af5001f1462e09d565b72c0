		// 2단~9단 역순 출력 (2x9, 2x8, 2x7 ... )
		int dan = 1;
		while(dan<10) {
			System.out.println(dan+"단");
			int i=9;
			while(i>0) {
				System.out.printf("%d X %d = %d\n",dan,i,dan*i);
				i--;
			}
			dan++;
			System.out.println();
		}

		
		// 9단~2단 출력
