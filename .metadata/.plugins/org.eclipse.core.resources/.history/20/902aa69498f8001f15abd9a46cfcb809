package Ch07;

public class C04For {
	public static void main(String[] args) {
		
		// 10번 반복 - Hello World
		// 탈출용 변수 : i = 0
		// 특정 조건 만족 시 반복 탈출, 탈출용 조건식 : i<10
		// 탈출용 연산식 : i++
		int i=0;
		System.out.println("while문------------");
		while (i<10) {
			System.out.println("Hello World");
			i++;
		}
		
		// 해당 while문을 for문으로 변환
		// 기본 형태
		// for(탈출용 변수 선언, 탈출용 조건식, 탈출용 연산식){} 
		System.out.println("for문------------");
		for(i=0;i<10;i++) {
			System.out.println("Hello World");
		}
		
		// 1-10까지 합
		int sum=0;
		for(i=0;i<10;i++) {
			sum+=i;
		}
		System.out.println(sum);
		
		// 1-n까지 합
		// n-m까지 합(n<m)
		// 2단
		// n단 (2<=n<=9)
		// 2-9단
		// 2-n단
		// n-m단
		// 별찍기
		
		for(i=0;i<4;i++) {
			for(int star=0;star<i+1;star++) {
				System.out.print("*");
			}
		}
		
		//*
		//**
		//***
		//****
		
		//1단일때 1, 2단일때 2, 3단일때 3
//		Scanner sc = new Scanner(System.in);
//		System.out.println("정수n을 입력하세요");
//		int n = sc.nextInt();
//		int i =0;
//		while(i<n) {
//			int star=0;
//			while(star<=i) {
//				System.out.print("*");
//				star++;
//			}
//			System.out.println();
//			i++;
//		}
	}
}
