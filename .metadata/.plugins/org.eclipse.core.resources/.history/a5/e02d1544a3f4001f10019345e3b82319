		// if-else문
		Scanner sc = new Scanner(System.in);
		System.out.println("나이 : ");
		int age = sc.nextInt();
		
		if(age >= 8) 
			System.out.println("학교에 다닙니다.");	// 라인이 하나면 중괄호 생략 가능
		else
			System.out.println("학교에 다니지 않습니다.");

		
		System.out.println("프로그램을 종료합니다.");
