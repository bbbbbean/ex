package Ch07;

public class C04For {
	public static void main(String[] args) {
		
		// 10번 반복 - Hello World
		// 탈출용 변수 : i = 0
		// 특정 조건 만족 시 반복 탈출, 탈출용 조건식 : i<10
		// 탈출용 연산식 : i++
		int i=0;
		System.out.println("while문------------");
		while (i<10) {
			System.out.println("Hello World");
			i++;
		}
		
		// 해당 while문을 for문으로 변환
		// 기본 형태
		// for(탈출용 변수 선언, 탈출용 조건식, 탈출용 연산식){} 
		System.out.println("for문------------");
		for(i=0;i<10;i++) {
			System.out.println("Hello World");
		}
		
		// 
		
		
	}
}
