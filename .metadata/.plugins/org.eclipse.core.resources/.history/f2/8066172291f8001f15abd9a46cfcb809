package Ch07;

import java.util.Scanner;

public class C03Continue_Break {
	public static void main(String[] args) {
		
		// 1. break
		// -1을 입력하기 전까지 정수값을 누적하여 합을 구하고 출력
		// 종료값 : -1
		// 결과 : 누적 합
		
		Scanner sc = new Scanner(System.in);
		
		int n;
		int sum =0;
		while(true) {
			
			n=sc.nextInt();
			if(n==-1) {
				break;
			}
			
			sum+=n;
		}
		System.out.println("sum : "+sum);
		

		sc.close();
		
		
		
		
		
	}
}
